         ShowNotification(new NotificationMessage { Severity = NotificationSeverity.Success, Summary = "Succes Summary", Detail = "Succes", Duration = 8000 });
    }
    else
    {
        // Wyświetl okienko informujące o niepowodzeniu rejestracji
